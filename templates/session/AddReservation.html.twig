            {{ message }}
        </div>
    {% endfor %}

    <center><h3>Demande de Réservation </h3></center><br>

    <div class="row">
        <div class="col-md-6 form-group"><br>
            <center>
                <div class="row">
                    <div class="form-reservation"> <br>
                        {{ form_label(form.date_arrivee,"Date d'arrivée") }}
                        {{ form_widget(form.date_arrivee, { 'attr': {'class': 'form-control ','placeholder':"Date d'arrivée" } }) }}
                        {{ form_errors(form.date_arrivee) }}
                    </div>
                    <div class="form-reservation"> <br>
                        {{ form_label(form.date_depart,"Date de depart") }}
                        {{ form_widget(form.date_depart, { 'attr': {'class': 'form-control ','placeholder':"Date de depart" } }) }}
