{% extends 'base.html.twig'%}
{% block body %}


    <section id="pricing" class="pricing">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <h2>Inscription ! </h2>

                    {{ form_start(form) }}
                    <div class="form-group ">
                        {{ form_row(form.username, {'label':'Nom d\'utilisateur','attr': {'placeholder':'Nom d\'utilisateur ...' }}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.email, {'label':'Adresse email','attr': {'placeholder':'Adresse email...' }}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.password, {'label':'Mot de passe','attr': {'placeholder':'Mot de passe...' }}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.confirm_password, {'label':'Confiration du mot de passe','attr': {'placeholder':'Répétez votre mot de passe' }}) }}
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Inscription ! </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

    </section>


{% endblock %}