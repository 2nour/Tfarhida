{% extends 'base.html.twig' %}

{% block title %} liste des Mat√©riaux {% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>



    <main id="main">

        <!-- ======= Breadcrumbs ======= -->

        <!-- ======= Portfolio Section ======= -->
        <section id="portfolio" class="portfolio">
            <div class="container">

                <div class="row">
                    <div class="col-lg-12 d-flex justify-content-center">
                        <ul id="portfolio-flters">
                            <li data-filter="*" class="filter-active">All</li>
                            <li data-filter="*">Tentes et couchage</li>
                            <li data-filter="*">Mobilier de camping</li>
                            <li data-filter="*">Boir et manger</li>

                        </ul>
                    </div>
                </div>




                <div class="row portfolio-container" {% for materiel in materiaux %}>
                    <div class="col-lg-4 col-md-6 portfolio-item filter-app" >
                        <div class="portfolio-wrap" >
                            <img src="{{ asset('uploads/images/produit/' ~ produit.image) }}" class="img-fluid" alt="">
                            <div class="portfolio-info">
                                <h4>{{ materiel.nom }}</h4>
                                <p>{{ materiel.prix }}</p>
                                <div class="portfolio-links">

                                    <a href="{{ path("selectMateriel",{ 'id': materiel.id }) }}"  ><i class="bx bxs-shopping-bag-alt"></i></a>



                                </div>
                            </div>


                        </div >

                    </div {% endfor %}>

                </div >






            </div>
        </section><!-- End Portfolio Section -->

    </main>



{% endblock %}