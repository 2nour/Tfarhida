{% block title %} Chambre {% endblock %}

{% block body %}

<main id="main">

    <!-- ======= Portfolio Details Section ======= -->
    <section id="portfolio-details" class="portfolio-details">
        <div class="container">

            <div class="row">

                <div class="col-lg-8">
                    <div class="owl-carousel portfolio-details-carousel">
                        <img src="{{ asset('assets/img/maison/' ~ chambre.photo) }}" class="img-fluid" alt="">
                    </div>
                </div>

                <div class="col-lg-4 portfolio-info">
                    <h3>Détails</h3>
                    <ul>
                        <li><strong>Nom: </strong>: {{ chambre.nom }}</li>
                        <li><strong>Type de lit</strong>: {{ chambre.typeLit }}</li>
                        <li><strong>Nombre personne pour la chambre</strong> : {{ chambre.nbrPers }}</li>
                        <li><strong>Prix chambre</strong>: {{ chambre.prix }}d</li>
                        <li><button type="button" class="btn btn-warning">Réserver</button></li>
                    </ul>

                </div>

            </div>


        </div>
    </section><!-- End Portfolio Details Section -->

</main><!-- End #main -->

<a href="#" class="back-to-top"><i class="icofont-simple-up"></i></a>

