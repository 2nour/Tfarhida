{% extends 'index.html.twig' %}
{% block title %} Modifier Randonnée {% endblock %}
{% block body %}
    <br><br><br><br>
    <center><h3>Modifier Randonnéee <small></small></center></h3><br>

    {{ form_start(form) }}







    <div class="row">
        <div class="col-md-6 form-group">
            {{ form_label(form.villedepart,"VilleDepart*") }}
            {{ form_widget(form.villedepart, { 'attr': {'class': 'form-control ','placeholder':"VilleDepart" } }) }}
            {{ form_errors(form.villedepart) }}

        </div>
        <div class="col-md-6 form-group mt-3 mt-md-0">
            {{ form_label(form.villedepart,"VilleArrivee*") }}
            {{ form_widget(form.villearrivee, { 'attr': {'class': 'form-control ','placeholder':"VilleArrivee" } }) }}
            {{ form_errors(form.villearrivee) }}

        </div>
    </div>
    <div class="form-group mt-3">
        {{ form_label(form.villedepart,"Activite*") }}
        {{ form_widget(form.activite, { 'attr': {'class': 'form-control ','placeholder':"Activite" } }) }}
        {{ form_errors(form.activite) }}
    </div>
    <div class="form-group mt-3">
        {{ form_label(form.villedepart,"Description*") }}
        {{ form_widget(form.description, { 'attr': {'class': 'form-control ','placeholder':"Description"  } }) }}
        {{ form_errors(form.description) }}
    </div>

    <br>
    <div class="form-group"><label class="col-sm-2 control-label">DateDepart</label>
        <div class="input-group date" data-provide="datepicker">
            {{ form_widget(form.datedepart, { 'attr': {'class': 'form-control ' } }) }}
            <div class="input-group-addon">
                <span class="glyphicon glyphicon-th"></span>
            </div>
        </div>



    </div>
    <br>

    <div class="form-group"><label class="col-sm-2 control-label">DateRetour</label>
        <div class="input-group date">
            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
            {{ form_widget(form.dateretour, { 'attr': {'class': 'form-control ' } }) }}
        </div>
    </div>
    <div class="col-md-6 form-group"><br>
        {{ form_label(form.image,"Image*") }}
        {{ form_widget(form.image) }}
        {{ form_errors(form.image) }}
    </div>
    <div class="col-md-6 form-group"><br>
        {{ form_label(form.duree,"Duree*") }}
        {{ form_widget(form.duree, { 'attr': {'class': 'form-control ','placeholder':"Duree"  } }) }}
        {{ form_errors(form.duree) }}
    </div>
    <div class="col-md-6 form-group"><br>
        {{ form_label(form.difficulte,"Difficulte*") }}
        {{ form_widget(form.difficulte, { 'attr': {'class': 'form-control ','placeholder':"difficulte"  } }) }}
        {{ form_errors(form.difficulte) }}
    </div>
    <div class="col-md-6 form-group"><br>
        {{ form_label(form.budget,"Budget*") }}
        {{ form_widget(form.budget, { 'attr': {'class': 'form-control ','placeholder':"Budget"  } }) }}
        {{ form_errors(form.budget) }}
    </div>

    <br>
    <center> <button type="submit" class="btn btn-success">Modifier</button></center></br></br>



    <br>












    {{ form_end(form) }}


{% endblock %}