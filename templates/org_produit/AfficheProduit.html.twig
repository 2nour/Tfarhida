{% block body %}
    <title>{% block title %} Liste des Produits{% endblock %} </title>

    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>



    <main id="main">

        <!-- ======= Breadcrumbs ======= -->

        <!-- ======= Portfolio Section ======= -->
        <section id="portfolio" class="portfolio">
            <div class="container">

                <div class="row">
                    <div class="col-lg-12 d-flex justify-content-center">
                        <ul id="portfolio-flters">
                            <li data-filter="*" class="filter-active">All</li>
                            <li data-filter="*">Tentes et couchage</li>
                            <li data-filter="*">Mobilier de camping</li>
                            <li data-filter="*">Boire et manger</li>

                        </ul>
                    </div>
                </div>


                <section id="portfolio" class="portfolio">
                    <div class="container">
                        <div class="row">

                            <div class="col-md-9">
                                <div class="row" {% for produit in produits %}>
                                    <div class="col-md-4 col-sm-6">
                                        <div class="product-grid6  mb-5">
                                            <div class="card d-flex">
                                                <div class="product-image6">
                                                    <a href="#">
                                                        <img class="card-image" src="{{ asset('uploads/images/produits/' ~ produit.image) }}">
                                                    </a>
                                                </div>
                                                <div class="product-content">
                                                    <h3 class="title"><a href="#">{{ produit.nom }}</a></h3>
                                                    <div class="price">prix :<strong>{{ produit.prix  }}</strong> dt</div>
                                                </div>
                                                <ul class="social">
                                                    <a href="{{ path("selectProduit",{ 'id': produit.id ,'id_Org':org.id}) }}"  ><i class="bx bxs-shopping-bag-alt"></i></a>

                                                </ul>
                                            </div>
                                           
                                        </div>
                                    </div {% endfor %}>
                                </div>
                            </div>





                        </div>
                    </div>


                </section>



            </div>
        </section><!-- End Portfolio Section -->

    </main>



